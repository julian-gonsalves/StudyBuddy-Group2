<!DOCTYPE html>
<html>
  <head>
    <title>StudyBuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info">
      <a style="font-size: 300%" class="navbar-brand" href="#"><span class="fas fa-book-reader"></span>&nbsp StudyBuddy</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
     </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active mr-1 mb-1">
            <% if user_signed_in? %>
              <div class="text-left font-weight-bold">Hello, <%= current_user.name %></div>
            

            <% else  %>
              
              <%= link_to "Log in", new_user_session_path, class:"btn btn-light" %>
              <%= link_to "Create an account", new_registration_path(resource_name), class:"btn btn-light" %>
            
            <% end %>

          </li>
          <li class="nav-item active mr-1 mb-1">
            <% if user_signed_in? %>
              <% if !current_page?(dashboard_path) %>
                <%= link_to "Go To dashboard", dashboard_path, class:"btn btn-light" %>
              <% end %>
            <% end %>
          </li>
          
          <li class="nav-item active mr-1 mb-1">
            <% if user_signed_in? %>
                <%= link_to "Profile", user_path(current_user.id), class:"btn btn-light" %>
            <% end %>
          </li>
          <li class="pull-right nav-item active mr-1 mb-1">
            <% if user_signed_in? %>
                <%= link_to "Sign out", destroy_user_session_path, :method => 'delete', class:"btn btn-light" %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
