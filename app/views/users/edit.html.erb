<html>
<head>
<meta charset=utf-8">
<tille>User Profile</title>
</head>

<body>

<h1>Change Personal information</h1>


<%= form_with model: @user, local: true do |form| %>
    <p>
      <%= form.label :Name %>
      <%= form.text_field :name, :disabled=>true%>
    </p>

    <p>
      <%= form.label :Email %>
      <%= form.text_field :email, :disabled=>true%>
    </p>

    <p>
      <%= form.label :Lastname %>
      <%= form.text_field :last_name %>
    </p>

    <p>
      <%= form.label :Firstname %>
      <%= form.text_field :first_name %>
    </p>

    <p>
      <%= form.label :Phone %>
      <%= form.text_field :phone_num %>
    </p>
   
    <p>
      <%= form.label :Description %>
      <%= form.text_field :description %>
    </p>

    <p>
      <%= form.submit "Submit Changes"%> 
      <input type="reset" value="Reset">
      <button type="button">
            <%= link_to "Go back to main profile", user_path(params[:id]),data: { confirm: 'Are you sure you want to leave this page? You will lose any unsaved data.?' } %>
        </button>
    </p>
    
  <% end %>

</body>

</html>
