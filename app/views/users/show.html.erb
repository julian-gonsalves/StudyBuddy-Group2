<style>
#header {
background-color:white;
color:black;
text-align:center;
padding:5px;
}

#personal_info {
background-color:#eeeeeeee;
color:black;
line-height:15px;
height:300px;
width:400px;
float:left;
padding:5px;
}

#class_section {
width:350px;
float:left;
padding:10px;
}
#footer {
background-color:black;
color:white;
clear:both;
text-align:center;
padding:5px;
}

</style>


<body>

<div id="header">
<h1>User Profile</h1>
</div>

<div id="personal_info">
<p>
<img src="https://icon-library.net/images/default-profile-icon/default-profile-icon-24.jpg" weight="60" height="60" >
</p>


<p>Name:  <%= @user.name %> </p>
<p>Last Name:  <%= @user.last_name %> </p>
<p>First Name:  <%= @user.first_name %> </p>
<p>Phone:  <%= @user.phone_num %> </p>
<p>Description: <%= @user.description %> </p>
<p>Email Address:  <%= @user.email %>  </p>

<button type="button">
<%= link_to 'Edit', edit_user_path(params[:id]) %>
</button>

</div>

<div id="class_section">
<table style="border:1px solid black;">
<thead>
    <th>Enrolled Course Name</th>
    <th>Enrolled Course code</th>
    <th></th>
</thead>
<tbody>
<!-- for each enrolled course, display details -->
    <% @my_courses.each do |c| %>
        <% x = Course.find(c.course_id) %>
        <tr>
            <td><%= link_to "#{x.course_name}", x %></td> <!-- Link to course page -->
            <td><%= x.course_code %></td>
            <td><%= button_to "Drop", course_path(:id => c.course_id), :method => :delete %></td>
        </tr>
    <% end %>
</tbody>
</table>
</div>

<div id="footer">
Group 2
</div>

</body>
