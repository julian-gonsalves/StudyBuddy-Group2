<%= form_with scope: :tutor, url: course_tutors_path, local: true do |form| %>
  <div style="font-size:130%" class="coantiner text-center">
    <h1>Become a tutor</h1>
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :rate %><br>
      <%= form.number_field :rate %>
    </div>

    <div>
      <%= form.label :hours %><br>
      <%= form.number_field :hours %>
    </div>

    <div>
      <%= form.label :date %><br>
      <%= form.datetime_select :date %>
    </div>

    <div class="py-3">
      <%= form.submit 'Become a tutor!', class:"btn btn-primary" %>
    </div>
    <div>
      <%= link_to "Back to tutors list", course_tutors_path, class:"btn btn-primary" %>
    </div>
  </div>
<% end %>