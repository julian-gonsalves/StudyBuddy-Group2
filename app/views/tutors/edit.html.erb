<div style="font-size:130%" class="container text-center">
  <h1> Edit Tutoring Info </h1>
  <%= form_with(model: @tutor, url: [@course, @tutor], local: true) do |form| %>
    <div>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :rate %><br>
      <%= form.number_field :rate %>
    </div>

    <div>
      <%= form.label :hours %><br>
      <%= form.number_field :hours %>
    </div>

    <div>
      <%= form.label :date %><br>
      <%= form.datetime_select :date %>
    </div>

    <div class="py-3">
      <%= form.submit "Update", class:"btn btn-primary" %>
    </div>
    <div>
      <%= link_to "Back", course_tutor_path(@tutor), class:"btn btn-primary"%>
    </div>
  <% end %>
</div>