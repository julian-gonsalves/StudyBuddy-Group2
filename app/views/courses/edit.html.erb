<div style="font-size:130%" class="container text-center">
<h1> Edit Course Info </h1>
<%= form_with(model: @course, url: @course, local: true) do |form| %>
    <div class="field">
      <%= form.label :course_code %><br>
      <%= form.text_field :course_code %>
    </div>
  
    <div class="field">
      <%= form.label :course_name %><br>
      <%= form.text_field :course_name%>
    </div>
    <div class="py-3 action">
      <%= form.submit "Update course", class:"btn btn-primary" %>
    </div>
    <div><%= link_to "Back to #{@course.course_code}", course_path(@course), class:"btn btn-primary" %>

    </div>
<% end %>
</div>