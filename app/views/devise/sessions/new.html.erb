<div class ="container text-center">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center">Already a user? Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field text-center font-weight-bold">
          <%= f.label :email %><br />
          <%= f.text_field :email, autofocus: true %>
        </div>

        <div class="field text-center font-weight-bold">
          <%= f.label :password %><br />
          <%= f.password_field :password %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field text-center font-weight-bold">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
      <div class="text-center"><%= render "devise/shared/links" %></div>
      <div class="pt-3">
        <%= link_to 'See our available courses and notes!', courses_path, class:"btn btn-primary font-weight-bold" %>
      </div>
    </div>
  </div>
  <div style="font-size:225%" class="row py-3">
    <div class="col-sm-12 col-md-4">
      <div>
        <span class="font-weight-bold">Connect</span>
      </div>
      <i class="far fa-handshake"></i>
    </div>
    <div class="col-sm-12 col-md-4">
      <div>
        <span class="font-weight-bold">Share</span>
      </div>
      <i class="fas fa-share"></i>
    </div>
    <div class="col-sm-12 col-md-4">
      <div>
        <span class="font-weight-bold">Learn</span>
      </div>
      <i class="fas fa-graduation-cap"></i>
    </div>
  </div>
</div>